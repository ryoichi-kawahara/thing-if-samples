<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="REFRESH"
        android:id="@+id/buttonRefresh"
        android:layout_below="@+id/textFanSpeed"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="State"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Power"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Preset Temp."
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fan Speed"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="OFF"
        android:id="@+id/textPowerState"
        android:layout_above="@+id/textView3"
        android:layout_toRightOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="25"
        android:id="@+id/textPresetTemp"
        android:layout_below="@+id/textPowerState"
        android:layout_alignRight="@+id/textPowerState"
        android:layout_alignEnd="@+id/textPowerState"
        android:layout_alignLeft="@+id/textPowerState"
        android:layout_alignStart="@+id/textPowerState"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="5"
        android:id="@+id/textFanSpeed"
        android:layout_below="@+id/textPresetTemp"
        android:layout_alignLeft="@+id/textPresetTemp"
        android:layout_alignStart="@+id/textPresetTemp"
        android:layout_alignRight="@+id/textPresetTemp"
        android:layout_alignEnd="@+id/textPresetTemp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="℃"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/textPresetTemp"
        android:layout_toRightOf="@+id/textPresetTemp"
        android:layout_toEndOf="@+id/textPresetTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Temperature"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Humidity"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="999"
        android:id="@+id/textTemperature"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="℃"
        android:id="@+id/textView12"
        android:layout_alignTop="@+id/textTemperature"
        android:layout_toRightOf="@+id/textTemperature"
        android:layout_toEndOf="@+id/textTemperature" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="999"
        android:id="@+id/textHumidity"
        android:textAlignment="center"
        android:layout_above="@+id/buttonRefresh"
        android:layout_toLeftOf="@+id/textView12"
        android:layout_toStartOf="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="%"
        android:id="@+id/textView14"
        android:layout_above="@+id/buttonRefresh"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Command"
        android:id="@+id/textView5"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/buttonRefresh"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power"
        android:id="@+id/checkBoxPower"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="true"
        android:layout_gravity="top|bottom" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preset Temp."
        android:id="@+id/checkBoxPresetTemp"
        android:checked="true"
        android:layout_below="@+id/checkBoxPower"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fan Speed"
        android:id="@+id/checkBoxFanSpeed"
        android:checked="true"
        android:layout_below="@+id/checkBoxPresetTemp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="999"
        android:id="@+id/textCommandPresetTemp"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/checkBoxPresetTemp"
        android:layout_alignBottom="@+id/checkBoxPresetTemp"
        android:layout_toRightOf="@+id/checkBoxPresetTemp"
        android:layout_toEndOf="@+id/checkBoxPresetTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="℃"
        android:id="@+id/textView13"
        android:layout_alignBaseline="@+id/checkBoxPresetTemp"
        android:layout_alignBottom="@+id/checkBoxPresetTemp"
        android:layout_toRightOf="@+id/textCommandPresetTemp"
        android:layout_toEndOf="@+id/textCommandPresetTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="OFF"
        android:id="@+id/textCommandPower"
        android:layout_alignBaseline="@+id/checkBoxPower"
        android:layout_alignBottom="@+id/checkBoxPower"
        android:layout_alignLeft="@+id/textCommandPresetTemp"
        android:layout_alignStart="@+id/textCommandPresetTemp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="999"
        android:id="@+id/textCommandFanSpeed"
        android:layout_alignBaseline="@+id/checkBoxFanSpeed"
        android:layout_alignBottom="@+id/checkBoxFanSpeed"
        android:layout_alignLeft="@+id/textCommandPresetTemp"
        android:layout_alignStart="@+id/textCommandPresetTemp"
        android:textAlignment="center" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchPower"
        android:checked="false"
        android:layout_alignBaseline="@+id/textCommandPower"
        android:layout_alignBottom="@+id/textCommandPower"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:onClick="onSwitchPowerClicked" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarPresetTemp"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignLeft="@+id/switchPower"
        android:layout_alignStart="@+id/switchPower"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:indeterminate="false"
        android:max="12"
        android:progress="0" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarFanSpeed"
        android:layout_alignBottom="@+id/textCommandFanSpeed"
        android:layout_alignLeft="@+id/seekBarPresetTemp"
        android:layout_alignStart="@+id/seekBarPresetTemp"
        android:layout_alignRight="@+id/seekBarPresetTemp"
        android:layout_alignEnd="@+id/seekBarPresetTemp"
        android:indeterminate="false"
        android:progress="0"
        android:max="10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="SEND"
        android:id="@+id/buttonSend"
        android:layout_below="@+id/textCommandFanSpeed"
        android:layout_alignLeft="@+id/buttonRefresh"
        android:layout_alignStart="@+id/buttonRefresh"
        android:onClick="sendCommand" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trigger"
        android:id="@+id/textView6"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/buttonSend"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Temperature"
        android:id="@+id/textView7"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/checkBoxFanSpeed"
        android:layout_alignEnd="@+id/checkBoxFanSpeed"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="999"
        android:id="@+id/textTriggerTemperature"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignLeft="@+id/textCommandFanSpeed"
        android:layout_alignStart="@+id/textCommandFanSpeed" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarTemperature"
        android:indeterminate="false"
        android:max="12"
        android:progress="0"
        android:layout_alignTop="@+id/textTriggerTemperature"
        android:layout_alignLeft="@+id/seekBarFanSpeed"
        android:layout_alignStart="@+id/seekBarFanSpeed"
        android:layout_alignRight="@+id/seekBarFanSpeed"
        android:layout_alignEnd="@+id/seekBarFanSpeed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="℃"
        android:id="@+id/textView15"
        android:layout_alignTop="@+id/textTriggerTemperature"
        android:layout_toRightOf="@+id/textCommandPower"
        android:layout_toEndOf="@+id/textCommandPower" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTriggerCondition"
        android:spinnerMode="dialog"
        android:layout_gravity="center"
        android:layout_below="@+id/seekBarTemperature"
        android:layout_alignLeft="@+id/seekBarTemperature"
        android:layout_alignStart="@+id/seekBarTemperature" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="SET"
        android:id="@+id/buttonSet"
        android:onClick="setTrigger"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Condition"
        android:id="@+id/textView16"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_above="@+id/buttonSet"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

</RelativeLayout>
